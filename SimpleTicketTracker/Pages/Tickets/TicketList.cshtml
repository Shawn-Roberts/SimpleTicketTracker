@page
@model SimpleTicketTracker.TicketListModel
@{
    ViewData["Title"] = "TicketList";
}
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div>
<div class="ticket-table-wrapper col-lg-10 col-md-10 col-sm-10">
    <table class="table table-striped table-bordered">
        <tr class="align" style="text-align:center;opacity:90%">
        </tr>
        @foreach (var t in Model.Tickets)
        {
            <tr>
                <th scope="row" class="col-lg-1 col-md-1, col-sm-1"><a asp-page="./TicketDetails" asp-route-ticketId="@t.TicketId">@t.Name</a></th>
            </tr>
        }

    </table>
</div>
<div class="filter-table-wrapper col-lg-2 col-md-2 col-sm-2" style=" border-radius: 5%; border: 1px solid #898484">
    <form method="get">
        <h4 class="form-heading"> Filter Tickets</h4>
        <div class="form-row">
            <div class="form-group col-lg-10, col-md-10, col-sm-10">
                <label style="font-weight:bold" asp-for="@Model.Status" name="statusFilter" class="control-label"></label>
                <select asp-items="@Model.Status" class="form-control"></select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-lg-10, col-md-10, col-sm-10">
                <label style="font-weight:bold" asp-for="@Model.Projects" name="statusFilter" class="control-label"></label>
                <select asp-items="@Model.Projects" class="form-control"></select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-lg-10, col-md-10, col-sm-10">
                <label style="font-weight:bold" asp-for="@Model.Owner" name="statusFilter" class="control-label"></label>
                <select asp-items="@Model.Owner" class="form-control"></select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-lg-10, col-md-10, col-sm-10">
                <label style="font-weight:bold" asp-for="@Model.RequestType" name="statusFilter" class="control-label"></label>
                <select asp-items="@Model.RequestType" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <input class=" btn btn-secondary col-lg-5 col-md-5 col-sm-5" type="submit" value="Filter" />
            <input class="btn btn-info col-lg-5 col-md-5 col-sm-5" asp-page="TicketList" type="submit" value="Clear" />
        </div>
    </form>
</div>
</div>

