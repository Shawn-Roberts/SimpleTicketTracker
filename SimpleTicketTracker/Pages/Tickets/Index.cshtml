@page
@model SimpleTicketTracker.IndexModel
@{
    ViewData["Title"] = "Index";
}
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <tr class="align ticket-tables" style="background-color:#FFAFAF">
            <th><a asp-page="./TicketList" asp-route-priority="critical">Critical (showing @Model.critcalTickets.Count().ToString() of @Model.AllCritcalTickets)</a></th>
        </tr>
        @foreach (var t in Model.critcalTickets)
        {
            <tr>
                <td class="ticket-tables-row"><a asp-page="./TicketDetails" asp-route-ticketId="@t.TicketId">@t.Name</a></td>
            </tr>
        }

    </table>
</div>
