@page
@model SimpleTicketTracker.ManageProjectsModel
@{
    ViewData["Title"] = "Manage Projects";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<h1>Manage Users</h1>
<div class="FilterForm">
    <form asp-page="./Index" method="get">
        <div class="form-actions no-color">
            <p>
                Filter by Project Name
                <input type="text" name="SearchString" value="@Model.CurrentFilter" />
                <input type="submit" value="Search" class="btn btn-primary" /> |
                <a asp-page="./ManageProjects">Clear Filter</a>
            </p>
        </div>
    </form>
</div>


@if (@Model.Projects.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-hover">
            <tbody>
                @foreach (var p in Model.Projects)
                {
                    <tr>
                        <th scope="row" class="col-lg-1 col-md-1, col-sm-1"><span>@p.Name </span></th>
                        <td class="col-lg-2 col-md-2, col-sm-2">
                            <a asp-page="./EditProject" asp-route-projectID="@p.ProjectId"> <i class="fas fa-edit"></i></a>
                        </td>
                        <td class="col-lg-2 col-md-2, col-sm-2">
                            <a asp-page="./DeleteProject" asp-route-projectID="@p.ProjectId"><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p> No projects found</p>
}
<a asp-page="./CreateProject" class="btn btn-primary">Add New </a>

