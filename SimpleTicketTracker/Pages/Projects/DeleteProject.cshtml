@page "{projectId:int}"
@model SimpleTicketTracker.DeleteProjectModel
@{
    ViewData["Title"] = "Delete Project";
}

<h1>Delete Project</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.Name)
        </dt>
        <dd class="col-sm-10">
            @Model.Project.Name
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Model.Project.CreationDate
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.Description)
        </dt>
        <dd class="col-sm-10">
            @Model.Project.Description
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Project.ProjectId" />
        <input type="hidden" asp-for="Project.Name" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

